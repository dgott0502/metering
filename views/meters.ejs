<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Meters & Assignments</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/global.css">
</head>
<body>
  <%- include('partials/header') %>
  
  <div class="container">
    <h2>Meters & Assignments</h2>
    <h4>Assigned Meters</h4>
    <% if (assignedMeters.length > 0) { %>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Meter ID</th>
            <th>Assigned Tenant</th>
          </tr>
        </thead>
        <tbody>
          <% assignedMeters.forEach(function(item) { %>
            <tr>
              <td><%= item.meter %></td>
              <td><%= item.tenant %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    <% } else { %>
      <p>No assigned meters.</p>
    <% } %>
    
    <h4>Unassigned Meters</h4>
    <% if (unassignedMeters.length > 0) { %>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Meter ID</th>
          </tr>
        </thead>
        <tbody>
          <% unassignedMeters.forEach(function(meter) { %>
            <tr>
              <td><%= meter %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    <% } else { %>
      <p>All meters are assigned.</p>
    <% } %>
    
    <a href="/" class="btn btn-secondary mt-3">Back to Home</a>
  </div>
  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
