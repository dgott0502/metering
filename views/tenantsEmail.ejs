<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Email Tenant Usage</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
  <script>
    function toggleSelectAll(source) {
      const checkboxes = document.querySelectorAll('input[name="tenantIds"]');
      checkboxes.forEach(checkbox => checkbox.checked = source.checked);
    }
  </script>
  <style>
    body {
      background: #f8f9fa;
    }
    .container {
      margin-top: 20px;
    }
    .card {
      box-shadow: 0px 2px 4px rgba(0,0,0,0.1);
      padding: 20px;
      border-radius: 8px;
      background: #fff;
      margin-bottom: 30px;
    }
  </style>
</head>
<body>
  <!-- Navigation Bar -->
  <nav class="navbar navbar-expand-lg navbar-light bg-light mb-4 shadow-sm">
    <div class="container">
      <a class="navbar-brand" href="/">Metering App</a>
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav me-auto">
          <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
          <li class="nav-item"><a class="nav-link" href="/tenants">Tenants</a></li>
          <li class="nav-item"><a class="nav-link" href="/tenants/new">New Tenant</a></li>
          <li class="nav-item"><a class="nav-link" href="/meters">Meters & Assignments</a></li>
		  <li class="nav-item"><a class="nav-link" href="/dashboard">Dashboard</a></li>
        </ul>
        <div class="dropdown">
          <button class="btn btn-secondary dropdown-toggle" type="button" id="tenantActionsDropdown" data-bs-toggle="dropdown" aria-expanded="false">
            More Actions
          </button>
          <ul class="dropdown-menu" aria-labelledby="tenantActionsDropdown">
            <li><a class="dropdown-item" href="/tenants/csv">CSV Management</a></li>
          </ul>
        </div>
      </div>
    </div>
  </nav>

  <div class="container">
    <div class="card">
      <h2>Email Usage for Selected Tenants</h2>
      <form action="/tenants/emailMultiple" method="POST">
        <div class="row gy-2 gx-3 align-items-center mb-3">
          <div class="col-auto">
            <label for="usageStartDate" class="visually-hidden">Start Date</label>
            <input type="date" class="form-control" name="startDate" id="usageStartDate" placeholder="Start Date" required>
          </div>
          <div class="col-auto">
            <label for="usageEndDate" class="visually-hidden">End Date</label>
            <input type="date" class="form-control" name="endDate" id="usageEndDate" placeholder="End Date" required>
          </div>
          <div class="col-auto">
            <label for="usageCost" class="visually-hidden">Cost per kWh</label>
            <input type="number" class="form-control" name="costPerKwh" id="usageCost" step="0.01" placeholder="Cost per kWh" value="0.10" required>
          </div>
        </div>
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th><input type="checkbox" onclick="toggleSelectAll(this)" /></th>
              <th>Unit Number</th>
              <th>Meter IDs</th>
              <th>Account Number</th>
              <th>Contact Name</th>
              <th>Email</th>
            </tr>
          </thead>
          <tbody>
            <% tenants.forEach(tenant => { %>
              <tr>
                <td>
                  <input type="checkbox" name="tenantIds" value="<%= tenant._id %>" />
                </td>
                <td><%= tenant.unitNumber %></td>
                <td><%= tenant.meterIds.join(", ") %></td>
                <td><%= tenant.accountNumber %></td>
                <td><%= tenant.contactName %></td>
                <td><%= tenant.email %></td>
              </tr>
            <% }); %>
          </tbody>
        </table>
        <button type="submit" class="btn btn-success">Email Usage for Selected Units</button>
      </form>
      <a href="/tenants" class="btn btn-secondary mt-3">Back to Tenants</a>
    </div>
  </div>
  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
