<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Tenant CSV Management</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="/css/global.css">
  <style>
    body { background: #f8f9fa; }
    .container { margin-top: 20px; }
    .card { box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1); padding: 20px; border-radius: 8px; background: #fff; margin-bottom: 30px; }
  </style>
</head>
<body>
  <%- include('partials/header') %>
  
  <div class="container">
    <div class="card">
      <h2>Tenant CSV Management</h2>
      <div class="mb-4">
        <h4>Export Tenants</h4>
        <a href="/tenants/export" class="btn btn-info">Download CSV</a>
      </div>
      <div class="mb-4">
        <h4>Import Tenants</h4>
        <form action="/tenants/import" method="POST" enctype="multipart/form-data">
          <div class="mb-3">
            <label for="importFile" class="form-label">Select CSV File</label>
            <input type="file" class="form-control" name="file" id="importFile" accept=".csv" required>
          </div>
          <button type="submit" class="btn btn-warning">Import Tenants</button>
        </form>
      </div>
      <a href="/tenants" class="btn btn-secondary">Back to Tenants</a>
    </div>
  </div>
  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
