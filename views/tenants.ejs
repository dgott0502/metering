<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Tenants List</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
  <script>
    function toggleSelectAll(source) {
      const checkboxes = document.querySelectorAll('input[name="tenantIds"]');
      checkboxes.forEach(checkbox => checkbox.checked = source.checked);
    }
  </script>
  <style>
    body { background: #f8f9fa; }
    .container { margin-top: 20px; }
    .dropdown-menu a { cursor: pointer; }
  </style>
</head>
<body>
  <!-- Navigation Bar -->
  <nav class="navbar navbar-expand-lg navbar-light bg-light mb-4 shadow-sm">
    <div class="container">
      <a class="navbar-brand" href="/">Metering App</a>
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav me-auto">
          <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
          <li class="nav-item active"><a class="nav-link" href="/tenants">Tenants</a></li>
          <li class="nav-item"><a class="nav-link" href="/tenants/new">New Tenant</a></li>
          <li class="nav-item"><a class="nav-link" href="/meters">Meters & Assignments</a></li>
		  <li class="nav-item"><a class="nav-link" href="/dashboard">Dashboard</a></li>
        </ul>
        <!-- Dropdown for additional tenant actions -->
        <div class="dropdown">
          <button class="btn btn-secondary dropdown-toggle" type="button" id="tenantActionsDropdown" data-bs-toggle="dropdown" aria-expanded="false">
            More Actions
          </button>
          <ul class="dropdown-menu" aria-labelledby="tenantActionsDropdown">
            <li><a class="dropdown-item" href="/tenants/csv">CSV Management</a></li>
            <li><a class="dropdown-item" href="/tenants/email">Email Usage</a></li>
          </ul>
        </div>
      </div>
    </div>
  </nav>

  <div class="container">
    <h2>Tenants List</h2>
    
    <!-- Tenant Listing Table with Checkboxes for deletion -->
    <form action="/tenants/delete" method="POST" id="deleteForm">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th><input type="checkbox" onclick="toggleSelectAll(this)" /></th>
            <th>Unit Number</th>
            <th>Meter IDs</th>
            <th>Account Number</th>
            <th>Contact Name</th>
            <th>Email</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% tenants.forEach(tenant => { %>
            <tr>
              <td>
                <input type="checkbox" name="tenantIds" value="<%= tenant._id %>" />
              </td>
              <td><%= tenant.unitNumber %></td>
              <td><%= tenant.meterIds.join(", ") %></td>
              <td><%= tenant.accountNumber %></td>
              <td><%= tenant.contactName %></td>
              <td><%= tenant.email %></td>
              <td>
                <a href="/tenants/<%= tenant._id %>" class="btn btn-sm btn-info">View</a>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
      <button type="submit" class="btn btn-danger mb-3">Delete Selected</button>
    </form>
    
    <a href="/tenants/new" class="btn btn-primary mb-4">Add New Tenant</a>
    
    <!-- CSV Export/Import Section (optionally kept here or moved to its own page) -->
    <!-- (Omitted here because we will move CSV management to its own page) -->
    
  </div>
  
  <!-- Bootstrap 5 JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
